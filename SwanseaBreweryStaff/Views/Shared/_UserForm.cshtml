@model Models.ViewModels.PostUserViewModel

<input type="hidden" asp-for="@Model.User.UserId" value="@Model.User.UserId" />
    <div class="form-group">
        <label class="control-label">First Name</label>
        <input asp-for="@Model.User.FirstName" class="form-control" />
        <span asp-validation-for="@Model.User.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.User.LastName" class="control-label">Last Name</label>
        <input asp-for="@Model.User.LastName" class="form-control" />
        <span asp-validation-for="@Model.User.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.User.Email" class="control-label">Email</label>
        <input asp-for="@Model.User.Email" class="form-control" />
        <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.User.UserTypeId" class="control-label">User Type</label>
        <select asp-items="@(new SelectList(Model.UserTypeList, "UserTypeId", "Name", Model.User.UserTypeId))" asp-for="@Model.User.UserTypeId" class="form-control">
            <option value="0">Please select an option</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.User.UserSectionId" class="control-label">User Section</label>
        <select asp-items="@(new SelectList(Model.UserSectionList, "UserSectionId", "Name", Model.User.UserSectionId))" asp-for="@Model.User.UserSectionId" class="form-control">
            <option value="0">Please select an option</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
